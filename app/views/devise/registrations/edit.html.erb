<h2>ユーザー情報の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> が発生しました:</h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :nickname, "ニックネーム" %><br>
    <%= f.text_field :nickname %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :last_name, "姓（全角）" %><br>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :first_name, "名（全角）" %><br>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name_kana, "姓カナ（全角）" %><br>
    <%= f.text_field :last_name_kana %>
  </div>

  <div>
    <%= f.label :first_name_kana, "名カナ（全角）" %><br>
    <%= f.text_field :first_name_kana %>
  </div>

  <div>
    <%= f.label :birth_date, "生年月日" %><br>
    <%= f.date_select :birth_date, start_year: 1930, end_year: Time.current.year - 5, use_month_numbers: true, prompt: { year: '--', month: '--', day: '--' } %>
  </div>

  <hr>

  <div>
    <%= f.label :password, "新しいパスワード（変更する場合のみ）" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :current_password, "現在のパスワード（必須）" %><br>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    <small>※変更を保存するには現在のパスワードが必要です</small>
  </div>

  <div>
    <%= f.submit "変更を保存する" %>
  </div>
<% end %>

<%= link_to "戻る", root_path %>
